extends layout

block content
    #whiteBGAddForum
        .forumcontainer
            #forum-title
                h1 #{title}
            br
            form(method='POST', action='/forum-posts/submit')
                .form-group
                    label Title:
                    input.form-control(name='title', type='text')
                br
                .form-group
                    label Body:
                    textarea.form-control(name='body')
                br
                br
                input.btn.btn-primary(type='submit', value='Submit')
            