extends layout
block content
    h1 #{title}
    br
    form(method='POST', action='/users/login')
        .form-group
            label Username:
            input.form-control(name='username', type='text')
        br
        .form-group
            label Password:
            input.form-control(name='password')

        br
        input.btn.btn-primary(type='submit', value='Sign In')
        .container
            p Don't have an account yet? Sign Up here!
            a.btn.btn-default.btn-sm(href='/users/signip') Create an Account