extends layout
block content
    #jumbotronConsultation
        .main.container
            .row.mt-5
                .col-md-6.col-md-offset-3
                    .card.card-body#login
                        h1.text-center.mb-3#forum-title #{title}                    
                        br
                        form(method='POST', action='/user/login')
                            .form-group
                                label Username:
                                input.form-control(name='username', type='text')
                            .form-group
                                label Password:
                                input.form-control(name='password', type='password')

                            input.btn.btn-primary.btn-block(type='submit', value='Sign In')
                            br
                            br
                            p.lead.mt-4 Don't have an account yet? Sign Up below!
                            a.btn.btn-success.btn-sm(href='/user/signup') Create an Account