extends layout

block content

    #myCarousel.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
            li.active(data-target='#myCarousel' data-slide-to='0')
            li(data-target='#myCarousel' data-slide-to='1')
            li(data-target='#myCarousel' data-slide-to='2')
        // Wrapper for slides
        .carousel-inner(role='listbox')
            .item.active
                a(href='/aboutus')
                    img(src='../img/carousel1.jpg')
                    .carousel-caption
                        p click to learn about us
            .item
                a(href='/forum-posts')
                    img(src='../img/carousel2.jpg')
                    .carousel-caption
                        p click to join the discussion
            .item
                a(href='/consultations')
                    img(src='../img/carousel3.jpg')
                    .carousel-caption
                        p click to learn more about consultations       
        // Left and right controls
        a.left.carousel-control(href='#myCarousel' role='button' data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
        a.right.carousel-control(href='#myCarousel' role='button' data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
        span.sr-only Next    

    .row
        .column
            .card.bg-primary
                img(src='https://liveboldandbloom.com/wp-content/uploads/2018/12/two-men-talking-Questions-to-Ask-Your-Best-Friend.jpg' alt='Men talking.' style='width:100%' height="120%")
                .container
                    h2 Forums
                    p.title Discussions
                    p View our forums now!
                    p 
                    p
                a(href='/forum-posts')
                    button.button  View Forums!
        .column
            .card.bg-primary
                img(src='https://www.maloneyplasticsurgery.com/wp-content/uploads/mature-male-patient-in-consultation-with-doctor-e1562103432587.jpg' alt='Consultation' style='width:100%')
                .container
                    h2 Book a specialist
                    p.title Consultations
                    p See a specialist now!
                    p
                a(href='/consultations')
                    button.button Book now!
        .column
            .card.bg-primary
                img(src='https://images.unsplash.com/photo-1490578474895-699cd4e2cf59?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80' alt='Community' style='width:100%' height="100%")
                .container
                    h2 Join the community!
                    p.title Member
