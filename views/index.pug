extends layout

block content

    #myCarousel.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
            li.active(data-target='#myCarousel' data-slide-to='0')
            li(data-target='#myCarousel' data-slide-to='1')
            li(data-target='#myCarousel' data-slide-to='2')
        // Wrapper for slides
        .carousel-inner(role='listbox')
            .item.active
                a(href='/aboutus')
                    img(src='../img/carousel1.jpg')
                    .carousel-caption
                        p click to learn about us
            .item
                a(href='/forum-posts')
                    img(src='../img/carousel2.jpg')
                    .carousel-caption
                        p click to join the discussion
            .item
                a(href='/consultations')
                    img(src='../img/carousel3.jpg')
                    .carousel-caption
                        p click to learn more about consultations       
        // Left and right controls
        a.left.carousel-control(href='#myCarousel' role='button' data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
        a.right.carousel-control(href='#myCarousel' role='button' data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
        span.sr-only Next    

    .row
        .column
            .card
                img(src='https://static.vecteezy.com/system/resources/previews/000/223/292/original/group-people-talking-and-laughing-vector.jpg' alt='Mike' style='width:100%' height="100%")
                .container
                    h2 Forums
                    p.title Discussions
                    p View our forums now!
                    p 
                    p
                a(href='/forum-posts')
                    button.button  View Forums!
        .column
            .card
                img(src='https://static.vecteezy.com/system/resources/previews/000/223/292/original/group-people-talking-and-laughing-vector.jpg' alt='John' style='width:100%')
                .container
                    h2 Book a specialist
                    p.title Consultations
                    p See a specialist now!
