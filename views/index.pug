extends layout

block content

    .jumbotron.text-center(href="https://fonts.googleapis.com/css2?family=IM+Fell+Great+Primer:ital@1&display=swap")
        h1 #{title}
        p It's OK to not be OK
        a.btn.btn-primary(href= "/aboutus") Learn More
    #myCarousel.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
            li.active(data-target='#myCarousel' data-slide-to='0')
            li(data-target='#myCarousel' data-slide-to='1')
            li(data-target='#myCarousel' data-slide-to='2')
        // Wrapper for slides
        .carousel-inner(role='listbox')
            .item.active
                a(href='/forum-posts')
                    img(src='https://thumbor.forbes.com/thumbor/fit-in/1200x0/filters%3Aformat%28jpg%29/https%3A%2F%2Fspecials-images.forbesimg.com%2Fimageserve%2F1134502088%2F0x0.jpg' alt='Los Angeles')
                    .carousel-caption
                        h3 Internation Men's Day !
                        p Even though the traffic was a mess, we had the best time.
            .item
                a(href='/forum-posts')
                    img(src='https://cdn.psychologytoday.com/sites/default/files/styles/amp_metadata_content_image_min_1200px_wide/public/field_blog_entry_teaser_image/2018-01/sea-2915187_480-144x144-167_94-377_378.jpg?itok=tTJcGnJm' alt='New York')
                    .carousel-caption
                        h3 New York
                        p The atmosphere in New York is lorem ipsum.
            .item
                a(href='/forum-posts')
                    img(src='https://phenterminedoctors.com/wp-content/uploads/2019/04/fernando-cferdo-627207-unsplash-1200x800.jpg' alt='Chicago')
                    .carousel-caption
                        h3 Chicago
                        p Thank you, Chicago - A night we won&apos;t forget.            
        // Left and right controls
        a.left.carousel-control(href='#myCarousel' role='button' data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
        a.right.carousel-control(href='#myCarousel' role='button' data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
        span.sr-only Next    

    .row
        .column
            .card

            img(src='https://static.vecteezy.com/system/resources/previews/000/223/292/original/group-people-talking-and-laughing-vector.jpg' alt='Mike' style='width:100%' height="100%")
            .container
                h2 Forums
                p.title Discussions
                p View our forums now!
                p 
                p
                a(href='/forum-posts')
                    button.button  View Forums!
        .column
            .card
            img(src='https://static.vecteezy.com/system/resources/previews/000/223/292/original/group-people-talking-and-laughing-vector.jpg' alt='John' style='width:100%')
            .container
                h2 Book a specialist
                p.title Consultations
                p See a specialist now!
                p
                a(href='/user/consultations')
                    button.button Book now!
        .column
            .card
            img(src='https://static.vecteezy.com/system/resources/previews/000/223/292/original/group-people-talking-and-laughing-vector.jpg' alt='Jane' style='width:100%' height="100%")
            .container
                h2 Join the community!
                p.title Member
                p Be part of a larger community.
                p
                a(href='/user/signup')
                    button.button Sign up now!    