extends layout

block content
    #jumbotronForum
        .container#containterManageConsultation
                h1#forum-title My Consultations
                if user
                    .row
                        each consultation, i in consultations
                                .column
                                    .card
                                        .containerCard#manageConsultationCard
                                            if consultation.counsellor
                                                p #[strong Counsellor]: #{consultation.counsellor}
                                            p #[strong Date]: #{moment(consultation.date).format("LL")}
                                            p #[strong Time]: #{moment(consultation.time, ["HH.mm"]).format("hh:mm a")}
                                            p #[strong Venue]: #{consultation.venue}
                                            p #[strong Status]: #{consultation.status}

                                            if consultation.status != 'completed'
                                                a.btn.btn-link2(type= 'button', consultation-id=consultation._id) Cancel 
                                                a.btn.btn-link2(type= 'button', consultation-id=consultation._id) Edit
