extends layout
block content
    .main.container
        .row.mt-5
            .col-md-6.col-md-offset-3
                .card.card-body#login
                    h1.display-4.m-b-2#forum-title #{title}
                    br
                    form(method='POST', action='/user/signup')
                        .form-group
                            label User Type (select one):
                            select.form-control(name='userType', value= newUser.userType)
                                option student
                                option counsellor
                        br
                        .form-group
                            label Username:
                            input.form-control(name='username', type='text', value= newUser.username)
                        br
                        .form-group
                            label Password:
                            input.form-control(name='password', type='password')
                        br
                        .form-group
                            label Confirm password:
                            input.form-control(name='password2', type='password')
                        br
                        .form-group
                            label First Name:
                            input.text-capitalize.form-control(name='first_name', type='text', value= newUser.first_name)
                        br
                        .form-group
                            label Last Name:
                            input.text-capitalize.form-control(name='last_name', type='text', value= newUser.last_name)
                        br
                        .form-group
                            label Email Address:
                            input.form-control(name='email', type='text', value= newUser.email)
                        br
                        br
                        input.btn.btn-primary(type='submit', value='Submit')