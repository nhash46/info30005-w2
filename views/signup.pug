extends layout
block content
    h1 #{title}
    br
    form(method='POST', action='/users/signup')
        .form-group
            label User Type (select one):
            select.form-control(name='userType')
                option student
                option counsellor
        br
        .form-group
            label Username:
            input.form-control(name='username', type='text')
        br
        .form-group
            label Password:
            input.form-control(name='password')
        br
        .form-group
            label First Name:
            input.form-control(name='first_name')
        br
        .form-group
            label Last Name:
            input.form-control(name='last_name')
        br
        .form-group
            label Email Address:
            input.form-control(name='email')
        br
        br
        input.btn.btn-primary(type='submit', value='Submit')