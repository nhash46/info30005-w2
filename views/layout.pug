doctype html
html
    head
        title Spatium
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=IM+Fell+Great+Primer:ital@1&display=swap")
        script(src = "https://ajax.googleapis.com.ajax/libs/popper.js/1.12.0/umd/popper.min.js")

    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Spatium
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/') Home
                        li
                            a(href='/forum-posts') Forums
                        li
                            a(href='/user/consultations') Consultations
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/user/login') Sign In  
        .container
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
            br
            hr
            footer
                p Copyright &copy; 2020
        script(src='/bower_components/jquery/dist/jquery.js')      
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')