doctype html
html
    head
        title Spatium
        meta(name='viewport' content="width=device-width, initial-scale=1")
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=IM+Fell+Great+Primer:ital@1&display=swap")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        link(rel='stylesheet' href='/css/style.css')
    body

        nav.navbar.navbar-inverse
            .container
                .navbar-header
                    #logo
                        a.navbar-brand(href='/')
                            img(src='../img/spatium-logo3.png' width= 95 height= 30)
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/') Home
                        li
                            a(href='/forum-posts') Forums
                        li
                            a(href='/user/consultations') Consultations
                    ul.nav.navbar-nav.navbar-right

                        if user
                            li
                                a(href='/user/profile') Profile
                            li 
                                a(href='/user/logout') Logout
                        else
                            li
                                a(href='/user/login') Sign In

        .pagecontent
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
            br
            hr
            .footer
                h6 Talk it through with us, we'll point you in the right direction
                .container
                    .row
                        .col-md-3.col-sm-6.col-xs-12 
                            a.btn.btn-danger.btn-rounded.btn-lg(href='#') Call our hotline!
                        .col-md-3.col-sm-6.col-xs-12 
                            a.btn.btn-danger.btn-rounded.btn-lg(href='#') Chat online!
                        .col-md-3.col-sm-6.col-xs-12 
                            a.btn.btn-danger.btn-rounded.btn-lg(href='#') Email us!
                        .col-md-3.col-sm-6.col-xs-12 
                            a.btn.btn-danger.btn-rounded.btn-lg(href='/forum-posts') Online Forums!    
                    hr
                .container
                    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
                    .row
                        .col-md-2.col-sm-6.col-xs-12 
                            a.fa.fa-facebook(href='#') 
                        .col-md-2.col-sm-6.col-xs-12lumn 
                            a.fa.fa-twitter(href='#')   
                        .col-md-2.col-sm-6.col-xs-12
                            a.fa.fa-instagram(href='#') 
                        .col-md-2.col-sm-6.col-xs-12 
                            a.fa.fa-youtube(href='#') 
                        .col-md-2.col-sm-6.col-xs-12
                            a.fa.fa-pinterest(href='#')   
                        .col-md-2.col-sm-6.col-xs-12 
                            a.fa.fa-reddit(href='#')            
                .container
                    .row                       
                        p.copyright-text
                        | Copyright &copy; 2020 All Rights Reserved by SPATIUM
                
        script(src='/bower_components/jquery/dist/jquery.js')      
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')
