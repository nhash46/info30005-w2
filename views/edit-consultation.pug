extends layout

block content
    .main.container
        .row.mt-5
            .col-md-6.col-md-offset-3
                .card.card-body#login
                    h1.display-4.m-b-2#forum-title Review consultation
                    br
                    form(method='POST', action='/consultations/manage/'+consultation._id)
                        .form-group
                            label Enter Date:
                            input.form-control(name='date', type='date', value= consultation.date)
                        br
                        .form-group
                            label Enter Time:
                            input.form-control(name='time', type = 'time', value= consultation.time)
                        br
                        .form-group
                            label Venue:
                            select.form-control(name='venue', value = consultation.time)
                                option Online
                                option On Campus
                        br
                        br
                        input.btn.btn-primary(type='submit', value='Submit')