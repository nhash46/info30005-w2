extends layout

block content
    .container
        #forum-title
            h1 #{title}
        form(method='POST', action='/user/profile/edit/'+user._id)
            #form-group
                label First Name
                input.form-control(name='first_name', type='text', value=user.first_name)
            br
            input.btn.btn-primary(type='submit', value='Submit')